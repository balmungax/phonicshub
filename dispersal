    <script>
        // Get all the buttons and info sections
        const koaBtn = document.getElementById('koa-btn');
        const mapleBtn = document.getElementById('maple-btn');
        const rainBtn = document.getElementById('rain-btn');
        
        const koaInfo = document.getElementById('koa-info');
        const mapleInfo = document.getElementById('maple-info');
        const rainInfo = document.getElementById('rain-info');
        
        // Function to hide all info sections
        function hideAllInfo() {
            koaInfo.classList.remove('active');
            mapleInfo.classList.remove('active');
            rainInfo.classList.remove('active');
        }
        
        // Show Koa tree info
        koaBtn.addEventListener('click', function() {
            hideAllInfo();
            koaInfo.classList.add('active');
            
            // Reset button styles
            koaBtn.style.backgroundColor = '#1b5e20';
            mapleBtn.style.backgroundColor = '#4caf50';
            rainBtn.style.backgroundColor = '#4caf50';
        });
        
        // Show Maple tree info
        mapleBtn.addEventListener('click', function() {
            hideAllInfo();
            mapleInfo.classList.add('active');
            
            // Reset button styles
            koaBtn.style.backgroundColor = '#4caf50';
            mapleBtn.style.backgroundColor = '#1b5e20';
            rainBtn.style.backgroundColor = '#4caf50';
        });
        
        // Show Rain tree info
        rainBtn.addEventListener('click', function() {
            hideAllInfo();
            rainInfo.classList.add('active');
            
            // Reset button styles
            koaBtn.style.backgroundColor = '#4caf50';
            mapleBtn.style.backgroundColor = '#4caf50';
            rainBtn.style.backgroundColor = '#1b5e20';
        });
        
        // Show Koa tree by default when page loads
        window.addEventListener('load', function() {
            koaBtn.click();
        });
    </script>
